from gpiozero import Servo
from time import sleep

# Assign 2 Servos
servo = Servo(17, min_pulse_width = 0.5/1000, max_pulse_width = 2.5/1000)

try:
    while True:
        servo.min() # 0Â°
        sleep(1)
        servo.value = (-0.30)
        sleep(1)
except KeyboardInterrupt:
    servo.mid()
    sleep(0.5)
    servo.detatch()